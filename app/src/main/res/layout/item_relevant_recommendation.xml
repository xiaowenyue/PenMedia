<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_movie_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99252631"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_movie_recommend"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/movie" />

    <TextView
        android:id="@+id/tv_movie_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="The Matrix"
        android:textColor="#b3c0e7"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_movie_recommend" />

    <TextView
        android:id="@+id/tv_movie_recommend_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="中国香港 ｜ 2003"
        android:textColor="#66ffffff"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_recommend_title" />

</LinearLayout>