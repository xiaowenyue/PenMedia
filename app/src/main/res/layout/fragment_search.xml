<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/view_underline"
        app:layout_constraintEnd_toEndOf="@id/keyboard"
        app:layout_constraintStart_toStartOf="@id/keyboard"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:background="@android:color/holo_green_dark"
            android:hint="Please enter what you are searching for" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

    <View
        android:id="@+id/view_underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#383a45"
        app:layout_constraintBottom_toTopOf="@id/keyboard"
        app:layout_constraintEnd_toEndOf="@id/keyboard"
        app:layout_constraintStart_toStartOf="@id/keyboard"
        app:layout_constraintTop_toBottomOf="@id/ll_input"
        app:layout_constraintWidth_percent="0.38" />
    <!-- 软键盘 -->
    <GridLayout
        android:id="@+id/keyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@color/orange"
        android:columnCount="6"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cl_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_underline"
        app:layout_constraintWidth_percent="0.38">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyA"
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyB"
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="B" />


    </GridLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_result"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:background="#252630"
        app:layout_constraintStart_toEndOf="@+id/keyboard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.62">
        <!-- 中间热门影视资源列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popular_movies_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/purple_200"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/search_results"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35" />

        <!-- 右侧搜索结果 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_results"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/popular_movies_list"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.65" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
