<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingStart="24dp">

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/view_underline"
        app:layout_constraintEnd_toEndOf="@id/keyboard"
        app:layout_constraintStart_toStartOf="@id/keyboard"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:focusable="true"
            android:hint="Please enter what you are searching for" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

    <View
        android:id="@+id/view_underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#383a45"
        app:layout_constraintBottom_toTopOf="@id/keyboard"
        app:layout_constraintEnd_toEndOf="@id/keyboard"
        app:layout_constraintStart_toStartOf="@id/keyboard"
        app:layout_constraintTop_toBottomOf="@id/ll_input"
        app:layout_constraintWidth_percent="0.38" />
    <!-- 软键盘 -->
    <GridLayout
        android:id="@+id/keyboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:columnCount="6"
        android:rowCount="5"
        app:layout_constraintBottom_toTopOf="@id/kb_number"
        app:layout_constraintEnd_toStartOf="@id/cl_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_underline"
        app:layout_constraintWidth_percent="0.38">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyA"
            style="@style/KeyboardButton"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyB"
            style="@style/KeyboardButton"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="C" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="D" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="E" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="F" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="G" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="H" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="I" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="J" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="K" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="L" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="M" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="N" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="O" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="P" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="Q" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="R" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="S" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="T" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="U" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="V" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="W" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="X" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="Y" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="Z" />
    </GridLayout>

    <GridLayout
        android:id="@+id/kb_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="1"
        app:layout_constraintBottom_toBottomOf="@id/ll_delete"
        app:layout_constraintEnd_toEndOf="@id/keyboard"
        app:layout_constraintStart_toStartOf="@id/keyboard"
        app:layout_constraintTop_toBottomOf="@id/keyboard"
        app:layout_constraintWidth_percent="0.38">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="6" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/ll_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/keyboard"
        app:layout_constraintStart_toStartOf="@id/keyboard"
        app:layout_constraintTop_toBottomOf="@id/kb_number"
        app:layout_constraintWidth_percent="0.38">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/KeyboardButton"
            android:text="0" />

        <ImageView
            android:layout_width="112dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_delete_search" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_result"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_search"
        android:paddingStart="18dp"
        android:paddingTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/keyboard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.62">

        <LinearLayout
            android:id="@+id/ll_popular"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/search_results"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35">

            <TextView
                android:id="@+id/tv_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular search content"
                android:textColor="#b3c0e7"
                android:textSize="26px" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popular_movies_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:scrollbars="vertical" />
        </LinearLayout>

        <!-- 右侧搜索结果 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_results"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ll_popular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.65" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
