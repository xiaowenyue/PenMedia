<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>

    <!-- Toolbar PopupTheme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <!-- Customize your popup overlay theme here -->
    </style>

    <style name="Theme.PenmediaTV" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="NavigationItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_item_height</item>
        <item name="android:layout_marginStart">@dimen/navigation_margin</item>
        <item name="android:layout_marginEnd">@dimen/navigation_margin</item>
        <item name="android:layout_marginTop">@dimen/item_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selected_background</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/nav_text</item>
        <item name="android:textSize">@dimen/navigation_size</item>
    </style>

    <style name="KeyboardButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/selector_item_recommend</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="KeyboardListButton">
        <item name="android:layout_width">98dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/selector_item_recommend</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="MovieCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/black</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RecommendImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">14dp</item>
        <item name="cornerSizeTopRight">14dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CollectButtonText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>